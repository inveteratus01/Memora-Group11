<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D2800"/> <!-- Dark brown shadow matching other elements -->
            <corners android:radius="0dp"/> <!-- Square corners for pixel aesthetic -->
        </shape>
    </item>

    <!-- Main card body -->
    <item android:left="0dp" android:top="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F0"/> <!-- Off-white/cream background -->
            <stroke android:width="2dp" android:color="#FFD700"/> <!-- Gold border -->
            <corners android:radius="0dp"/> <!-- Square corners for pixel aesthetic -->
        </shape>
    </item>

    <!-- Pixel corner details -->
    <item android:left="0dp" android:top="0dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#DAA520"/> <!-- Darker gold pixel corner -->
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#DAA520"/> <!-- Darker gold pixel corner -->
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700"/> <!-- Gold pixel detail -->
        </shape>
    </item>
    <item android:right="6dp" android:bottom="6dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700"/> <!-- Gold pixel detail -->
        </shape>
    </item>

    <!-- Decorative gold line at top -->
    <item android:left="4dp" android:top="4dp" android:right="8dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFD700"/> <!-- Gold with low opacity -->
        </shape>
    </item>

    <!-- Inner highlight to enhance pixel effect -->
    <item android:left="4dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#40FFD700"/> <!-- Gold with low opacity -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>