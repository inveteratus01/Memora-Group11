<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#FF9900" />
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <bitmap
            android:src="@android:drawable/ic_menu_more"
            android:tint="#FFD700" />
    </item>
</selector>