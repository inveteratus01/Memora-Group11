<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <!-- Main card fill -->
            <solid android:color="#000000" />
            <!-- Sharp corners for pixel effect -->
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Border layer -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <!-- Card inner area -->
            <solid android:color="#222222" />
            <!-- Pixelated border -->
            <stroke android:width="4dp" android:color="#444444" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Pixelated corner decorations -->
    <item android:left="24dp" android:top="24dp" android:right="24dp" android:bottom="24dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#666666" android:dashWidth="8dp" android:dashGap="8dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>