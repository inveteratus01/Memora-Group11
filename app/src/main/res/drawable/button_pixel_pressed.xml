<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow layer (shifted slightly for pressed effect) -->
            <item android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#3D1C00"/>
                    <corners android:radius="0dp"/>
                </shape>
            </item>

            <!-- Main card body (shifted slightly for pressed effect) -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#8B4513"/>
                    <stroke android:width="2dp" android:color="#DAA520"/>
                    <corners android:radius="0dp"/>
                </shape>
            </item>

            <!-- Pixel details (adjusted for pressed state) -->
            <item android:left="2dp" android:top="2dp" android:width="2dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#DAA520"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state (normal) - create a new brown style -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#3D1C00"/>
                    <corners android:radius="0dp"/>
                </shape>
            </item>

            <!-- Main card body -->
            <item android:left="0dp" android:top="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#8B4513"/>
                    <stroke android:width="2dp" android:color="#FFD700"/>
                    <corners android:radius="0dp"/>
                </shape>
            </item>

            <!-- Pixel corner details -->
            <item android:left="0dp" android:top="0dp" android:width="2dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#DAA520"/>
                </shape>
            </item>
            <item android:right="4dp" android:bottom="4dp" android:width="2dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#DAA520"/>
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:width="2dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFD700"/>
                </shape>
            </item>
            <item android:right="6dp" android:bottom="6dp" android:width="2dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFD700"/>
                </shape>
            </item>

            <!-- Decorative gold line at top -->
            <item android:left="4dp" android:top="4dp" android:right="8dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#80FFD700"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>