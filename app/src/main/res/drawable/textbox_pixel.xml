<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (pixelated drop shadow effect) -->
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#222222" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Pixelated border bottom-right corner -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Main background -->
    <item android:left="2dp" android:top="2dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <!-- More vibrant background -->
            <solid android:color="#4682B4" /> <!-- Steel Blue -->

            <!-- Pixel-style border -->
            <stroke android:width="2dp" android:color="#000000" />
        </shape>
    </item>

    <!-- Inner highlight for retro effect (top and left) -->
    <item android:left="4dp" android:top="4dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ADD8E6" /> <!-- Light Blue -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Diagonal pixel effect (top left corner) -->
    <item android:left="2dp" android:top="2dp" android:right="0dp" android:bottom="0dp"
        android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Diagonal pixel effect (bottom right corner) -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp"
        android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>
</layer-list>