<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep shadow (matches title shadow) -->
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D2800"/> <!-- Dark brown -->
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <!-- Main fill (aged parchment) -->
    <item android:top="2dp" android:left="2dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#E6D8A5"/> <!-- Vintage paper -->
            <stroke android:width="2dp" android:color="#8B4000"/> <!-- Brown border -->
        </shape>
    </item>

    <!-- Inner highlight (gold like title) -->
    <item android:top="3dp" android:left="3dp" android:right="7dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFD70080"/> <!-- Gold at 50% opacity -->
        </shape>
    </item>

    <!-- Pixel corners -->
    <item android:left="2dp" android:top="2dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4000"/> <!-- Brown pixel -->
        </shape>
    </item>
    <item android:right="2dp" android:bottom="2dp" android:width="2dp" android:height="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4000"/>
        </shape>
    </item>
</layer-list>