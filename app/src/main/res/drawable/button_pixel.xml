<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- DEFAULT STATE -->
    <item android:state_pressed="false">
        <layer-list>
            <!-- Main light blue color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#70C8FF"/>
                    <corners android:radius="4dp"/> <!-- Subtle rounding -->
                </shape>
            </item>

            <!-- Jagged black border (simulated with dash) -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#000000"
                        android:dashWidth="8dp"
                        android:dashGap="4dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- PRESSED STATE (darker blue) -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3A9BFF"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>

            <!-- Pressed border (thicker dash) -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="3dp"
                        android:color="#000000"
                        android:dashWidth="6dp"
                        android:dashGap="3dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>