<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="Theme.MyPixelApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Disable Material default button styles -->
        <item name="materialButtonStyle">@style/Widget.MyPixelButton</item>
        <item name="android:buttonStyle">@style/Widget.MyPixelButton</item>
    </style>

    <style name="Widget.MyPixelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_pixel</item>
        <item name="android:textColor">#FFD700</item> <!-- Matches title gold -->
        <item name="android:fontFamily">@font/upheavtt</item> <!-- Better 8-bit font -->
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:shadowColor">#5D2800</item> <!-- Same as title shadow -->
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item> <!-- Preserves casing -->
    </style>
</resources>