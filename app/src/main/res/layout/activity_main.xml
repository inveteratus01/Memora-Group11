<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/correctCount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/upheavtt"
        android:text="MEMORA"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:fontFamily="@font/pxo"
        android:text="&quot;Master anything, one card at a time.&quot;"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!-- res/layout/your_layout.xml -->

    <Button
        android:id="@+id/aboutBtn"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/button_pixel"
        android:backgroundTint="@null"
        android:fontFamily="@font/pxob"
        android:text="ABOUT"
        android:textAllCaps="true"
        android:textColor="#003366"
        android:textSize="28sp"
        android:theme="@style/Theme.MyPixelApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFlashCardBtn" />

    <Button
        android:id="@+id/quitBtn"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/button_pixel"
        android:backgroundTint="@null"
        android:fontFamily="@font/pxob"
        android:text="QUIT"
        android:textAllCaps="true"
        android:textColor="#003366"
        android:textSize="28sp"
        android:theme="@style/Theme.MyPixelApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutBtn" />

    <Button
        android:id="@+id/viewFlashCardBtn"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/button_pixel"
        android:backgroundTint="@null"
        android:fontFamily="@font/pxob"
        android:text="START"
        android:textAllCaps="true"
        android:textColor="#003366"
        android:textSize="28sp"
        android:theme="@style/Theme.MyPixelApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>