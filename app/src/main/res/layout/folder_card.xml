<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/foldercard_pixel"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/menuIcon"
            android:fontFamily="@font/upheavtt"
            android:shadowColor="#3D0C0C"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="CARD TITLE"
            android:textColor="#FFD700"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/totalWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTitle"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/menuIcon"
            android:fontFamily="@font/pxo"
            android:text="12 terms"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:contentDescription="Menu options"
            android:src="@android:drawable/ic_menu_more"
            app:tint="#FFD700" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>