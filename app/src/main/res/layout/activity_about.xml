<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/about_background"
    tools:context=".ui.about.AboutActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:src="@drawable/bg_stars" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/upheavtt"
        android:text="BACK"
        android:textSize="20sp"
        android:theme="@style/Theme.MyPixelApp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="120dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEMORA"
                android:textSize="38sp"
                android:textStyle="bold"
                android:fontFamily="@font/upheavtt"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textColor="#FFD700"
                android:shadowColor="#5D2800"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:letterSpacing="0.08"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/about_card_pixel"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/upheavtt"
                        android:text="ABOUT THE APP"
                        android:textColor="#FFD700"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/pxo"
                        android:textColor="#FF000000"
                        android:text="Memora is a flashcard app reminiscent of retro arcade games designed to help you remember important information. Create folders, add words and their descriptions, and flip through cards to test your knowledge."
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/about_card_pixel"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/upheavtt"
                        android:text="HOW TO USE"
                        android:textColor="#FFD700"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/pxo"
                        android:textColor="#FF000000"
                        android:text="1. Create folders to organize your flashcards\n2. Add words and descriptions to each folder\n3. Use the Review button to flip through cards\n4. Test yourself by guessing the descriptions"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/about_card_pixel"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/upheavtt"
                        android:text="DEVELOPERS"
                        android:textColor="#FFD700"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/pxo"
                        android:textColor="#FF000000"
                        android:text="Memora was a case study developed by Group 11 - BSIT2A: Vargas, Rudy III H., Feruelo, Ceejay B., Guevarra, Ivee P. in partial fulfillment of the requirements for the course Application Development under Prof. Racquel Cortez."
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pxo"
                android:gravity="center"
                android:text="Version 1.0.0"
                android:textColor="#FFD700"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Character GIFs container at bottom - preserved as requested -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifDonkeyKong"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/donkey_kong" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifYoshi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/yoshi" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifToad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/toad" />
    </LinearLayout>
</RelativeLayout>