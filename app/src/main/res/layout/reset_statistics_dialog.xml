<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_pixel"
        android:orientation="vertical"
        android:padding="24dp"
        android:theme="@style/Theme.MyPixelApp">

        <ImageView
            android:id="@+id/resetIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_warning"
            app:tint="#FFD70040" />

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/upheavtt"
            android:gravity="center"
            android:text="Reset Statistics"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/pxo"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Are you sure you want to reset all statistics for this folder? This action cannot be undone."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNegative"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_pixel"
                android:fontFamily="@font/upheavtt"
                android:text="CANCEL"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonPositive"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="#FFD70040"
                android:fontFamily="@font/upheavtt"
                android:text="RESET"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>